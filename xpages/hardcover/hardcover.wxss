@import "/template/exhibition/exhibition.wxss";
@import "/utils/weui.wxss";

.weui-search-bar {
  background-color: #e1e2e0;
}

.headebox {
  background-color: #ffffff;
  font-size: 33rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  text-indent: 40rpx;
  width: 96%;
  margin: 0 auto;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #363636;
  opacity: 0.5;
  z-index: 98;
}

.subFixedTop {
  left: 0;
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  z-index: 999;
  background: #FFF;
  /* border-bottom: 1px solid #f1f1f1; */
}


.subFixedTop .item {
  flex: 1;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #888;
  align-items: center;
  justify-content: center;
}

.selected {
  width: 100%;
  position: absolute;
  z-index: 99;
transition: 1s;
background-color: #ffffff;
}

.screenBox-show {
  transition: 1s;
  position: absolute;
  background-color: #ffffff;
  width: 100%;
  z-index: 101;
}

.neibu{
  position: absolute;
  bottom: 0;
  overflow: scroll;
}

.selectedval {
  color:#888;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  text-align: center;
  font-size: 12px;
  position: static;
}
.selectedvals{
  background-color:#f97704;
   border-color: #f97704;
   color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 12px;
}


.Drawer {
  position: fixed;
  background: #eeeeee;
  width: 300px;
  height: 100%;
  right: -300px;
  z-index: 200;

  top: 0%;
}

.dirwerbox {
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 1%;
  display: flex;
  align-items: center;


}

.drawertext,
.drawercontent {
  flex-grow: 1;
  text-align: center;
}

.drawertext {
  font-size: 28rpx;
}

.drawertitle {
  font-size: 33rpx;
}

.choice {
  margin-top: 6%;
}

.listchioce {
  background-color: #ffffff;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 1%;
}

.listchioceleft {
  margin-left: 30rpx;
}

.listchioceright {
  margin-left: auto;
  margin-right: 30rpx;
}

.detail {
  background-color: #ffffff;
  text-indent: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.icon-shaixuan {
  margin-left: 30rpx;
}

.xxr{
  display: grid;
  grid-template-columns: auto auto auto;
grid-column-gap: 20rpx;
grid-row-gap: 20rpx;
width: 95%;
margin: 0 auto;
}

.xxrbox{
  background-color: rgb(209, 90, 90);
  text-align: center;
}
.neibuhuadon{
  width: 710rpx;
  display: grid;
  grid-template-columns: auto auto auto;
  grid-column-gap: 20rpx;
grid-row-gap: 20rpx;
margin: 20rpx;
}


.distributed{
  margin: 0 auto;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
  margin-top: 30rpx;
  text-align: center;
}