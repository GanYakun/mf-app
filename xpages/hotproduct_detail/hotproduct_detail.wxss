@import "/utils/font.wxss";
page {
  background-color: #f1f1f1;
  /* background-color: #ddd; */
}

.heade {
  display: flex;
  background-color: #ffffff;
  height: 80rpx;
  justify-content: space-around;
  align-items: center;
}

.headetitle {
  font-size: 28rpx;
  margin-left: 30rpx;
  display: flex;
  align-content: center;
}

.content {
  display: grid;
  grid-template-columns: 50% 50%;
}

.cintentimg {
  width: 96%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.cintentimg image {
  width: 100%;
}

.inaddress {
  font-size: 25rpx;
}

.frequency {
  margin-left: auto;
  margin-right: 2%;
}

.icon-iconfontlingxing,
.icon-shaixuan {
  font-size: 25rpx;
  margin-left: 10rpx;
  margin-top: 8rpx;
}
.icon-een{
  font-size: 18rpx;
  color: #888888;
}


.judgesub{
  line-height: 9rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  }
  
  .upjudgesub{
    transform: rotate(180deg);
  }

  scroll-view ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
    display: none;
  }

  .child-list-scroll {
    white-space: nowrap;
    background: #ffffff;
    width: 100%;
    padding: 0 0 10rpx 0;
    /* background: #efefef; */
    box-sizing: border-box;
    border-bottom: 4rpx dashed #f5f5f5;
  }
  
  .scroll-child{
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    margin-right: 30rpx;
    display: inline-block;
  }
  .scroll-child image{
    height: 80rpx;
    width: 0;
    margin-bottom: 5rpx;
  }
  .scroll-child>view{
    display: flex;
    flex-direction: column;
  align-items: center;
  }
  
  .scroll-child:last-child{
    margin-right: 0;
  }
  
  .selectchild{
    color: #f97704;
  }

  

