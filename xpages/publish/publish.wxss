.asbbox{
  font-size: 28rpx;
  border-radius: 6rpx;
  line-height: 40rpx;
  padding: 5px;
  width: 90%;
  border: 1px solid #f2f2f2;
  height: 200rpx;
}

.boxid{
display: flex;
justify-content: center;
width: 100%;
}
.inputBox{
  font-size: 28rpx;
}


.commentsbox{
  display: flex;
}

.comments-section{
  width: 206rpx;
    height: 64rpx;
    background: #f97704;
    color: #fff !important;
    text-align: center;
    line-height: 64rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
    float: left;
    margin: 0 20rpx 0 20rpx;
}

.comments-num{
  width: 206rpx;
    height: 64rpx;
    color: #666;
    line-height: 64rpx;
    font-size: 25rpx;
}
.commentslist{
  font-size: 24rpx;
  margin-top: 30rpx;
  border-bottom: 1px #f1f1f1 solid;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;

}

.commentslistbox{
padding-bottom: 30rpx;
}
.commentslistbox .item{
  margin-bottom: 20rpx;
}
.commentslistbox .img{
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;

}
.flex{
  align-items: unset !important;
}
.commentslistbox .img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.textarea-style{
  font-size: 26rpx;
}

.scoring{
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: SourceHanSansCN-Regular;
  color: #747474;
}
.scoring>view{
  display: flex;
  align-items: center;
}

.icon-xingxingkongxin ,.icon-xingxing4{
  margin-left: 15rpx;
  font-size: 40rpx;
}

.icon-xingxing4{
  color: #ff6c00;
}

.business-reply{
  width: 100%;
  background-color: #f2f2f2;
  border-radius: 8rpx;
  padding: 10rpx 0;
  padding-left: 6rpx;
  box-sizing: border-box;
  font-family: MicrosoftYaHei;
	color: #747474;
}