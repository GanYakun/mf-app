page{
  background-color: #f1f1f1;
}

.content{
  padding:20rpx;
  padding-bottom: 0;
}
.item{
  background-color: #fff;
  /* padding: 20rpx; */
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: block !important;
}
.item .img{
  width: 100%;
  border-radius: 12rpx;
}
.item .img image{
  width: 100%;
  height: 0;
  border-radius: 12rpx;
}
.item .itemright{
  width: 100%;
  line-height: 50rpx;
  padding: 0 20rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.item .title{
  font-weight: bold;
  color: #333333;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item .context{
  color: #666666;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 34rpx;
  margin-top: 10rpx;
}

.livinginbox{
  display: grid;
  grid-template-columns: auto auto auto auto;
grid-column-gap: 30rpx;
justify-content: center;
grid-row-gap: 15rpx;
align-items: center;
background: #fff;
padding: 20rpx 0;

}

.livingin{
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  text-align: center;
  color: #f97704;
  /* margin-right: 30rpx; */
}

.scroll-scrren{
  white-space: nowrap;
  padding-left: 20rpx;
  box-sizing: border-box;
  padding-bottom: 10rpx;
  background: #fff;
  
}
.scroll-item{
  display: inline-block;
  margin-right: 30rpx;
  font-size: 26rpx;
}

.clickItem{
  color: #ff6c00;
}
