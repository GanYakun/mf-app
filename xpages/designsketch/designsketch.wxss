.screen-box {
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.screen-item{
  font-size: 26rpx;
  color: #888888;
}
.icon-jiantou9{
  font-size: 26rpx;
  margin-left: 10rpx;
}
.code-list-box{
  background-color: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  
}
.code-list{
  padding-top: 20rpx;
  transition:.2s;
  width: 100%;
  max-height: 800rpx;
  position:absolute;
  z-index: 9;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow-y: scroll;
 
}
.nocode-list{
  transition:.2s;
  max-height: 0rpx;
  position:absolute;
  z-index: 9;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow-y: scroll;
}
.code-item{
    background-color: #fff;
    padding: 15rpx 5rpx;
    width: 30%;
    text-align: center;
    margin-bottom: 20rpx;
    color: #888;
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    text-align: center;
    font-size: 24rpx;
    position: static;
    padding: 10rpx 5rpx;
    justify-content: center;
}

.code-mark{
  position: fixed;
  z-index: 6;
  background-color: hsl(0, 0%, 20%,0.4);
  width: 100%;
  height: 100%;
}

.yes-item{
    background-color: #f97704;
    border-color: #f97704;
    color: #fff;
    border-radius: 10rpx;
    text-align: center;
    font-size: 12px;
}


.selected-options-box{
  background: #ffffff;
  font-size: 26rpx;
  color: #f9740b;
  padding: 0 20rpx;
  border-top: 1rpx #e6e6e6 dashed;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  align-items: center;
}
.selected-options-view{
  display: inline-block;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.selected-options-view>view>view {
  line-height: 50rpx;
  padding:0 30rpx;
	max-height: 50rpx;
	background-color: #f2f2f2;
  border-radius: 25px;
  box-sizing: border-box;
  display: inline-block;
}
.selected-options-box>view:nth-child(1){
  margin-left: 0;
}
.selected-close{
  margin-left: 0rpx !important;
  margin-top: -15rpx;
  background: unset !important;
  padding: unset !important;
  /* background:#333 !important; */
  height: 40rpx;
  width: 40rpx;
  display: flex !important;
  align-items: center;
  justify-content: center;
  line-height: unset !important;
}

