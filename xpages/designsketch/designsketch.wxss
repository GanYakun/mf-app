.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #363636;
  opacity: 0.5;
  z-index: 100;
  top: 0;
}

.Drawer {
  position: fixed;
  background: #eeeeee;
  width: 300px;
  height: 100%;
  right: -300px;
  z-index: 200;

  top: 0%;
}

.top_img {
  width: 60px;
  height: 60px;
  background: #000000;
}

.dirwerbox {
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 1%;
  display: flex;
  align-items: center;


}

.drawertext,
.drawercontent {
  flex-grow: 1;
  text-align: center;
}

.drawertext {
  font-size: 28rpx;
}

.drawertitle {
  font-size: 33rpx;
}

.choice {
  margin-top: 6%;
}

.listchioce {
  background-color: #ffffff;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 1%;
}

.listchioceleft {
  margin-left: 30rpx;
}

.listchioceright {
  margin-left: auto;
  margin-right: 30rpx;
}

.detail {
  background-color: #ffffff;
  text-indent: 30rpx;
  height: 70rpx;
  line-height: 70rpx;

}

.judgesub {
  line-height: 8rpx;
  margin-left: 10rpx;
}

.upjudgesub {
  transform: rotate(180deg);
}

.cintentimg {
  width: 100%;
  margin: 0 auto;

}

.cintentimg image {
  width: 100%;
  height: 500rpx;
  border-radius: 12rpx;
}

.introduce {
  padding: 0 15rpx;
  box-sizing: border-box;
  font-family: MicrosoftYaHei;
  /* max-width: 73%; */
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 66rpx;
	letter-spacing: 0rpx;
	color: #000000;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:1; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
  white-space:pre-wrap;
}

.introducecontent {
  font-size: 11px;
  line-height: 38rpx;
  color: #a5a5a5;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.inaddress {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  padding: 10rpx 0 0 0;


}

.textcolor {
  color: #f97704;
}

