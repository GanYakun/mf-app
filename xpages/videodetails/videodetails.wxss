@import "../../utils/font.wxss";
page{
  background-color: #f7f7f7;
  overflow: scroll;
}
.lifexijie{
  margin-top: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;

}
.topbox{
  background-color: #ffffff;
  padding: 20rpx 0;
}

.livinginbox{
  display: flex;
  flex-wrap: wrap;
grid-column-gap: 30rpx;
justify-content: center;
grid-row-gap: 15rpx;
align-items: center;
}

.livingin{
  width: 20%;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  text-align: center;
  color: #f97704;
  margin-right: 30rpx;
  margin-bottom: 15rpx;
}
.tuwen{
  display: flex;
  width: 475rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  padding: 14rpx;
}

.listshuju{
  width: 710rpx;
  margin: 0 auto;
  background-color: #ffffff;
  padding: 20rpx;
}

.listitem{
  display: flex;

}

.listitem .item{
  width: 230rpx;
  height: 172rpx;
border-radius: 12rpx;
overflow: hidden;
}

.title{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  /* font-weight: bold; */
}


.icon-guanliyuan,.icon-bofang{
  font-size: 32rpx;
  color: #999999;
  margin-right: 14rpx;
}

.icon-bofang{
  margin-left: 14rpx;
}

.tuwen view{
  font-size: 26rpx;
  color: #999999;
}

.play{
  width: 100%;
  height: 100%;
  background-color: #333333;
  opacity: 0.4;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  overflow: hidden;
}

.play>text{
  font-size: 45rpx;
color: #ffffff;
}


.topmore{
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.topmore>view:first-child{
  font-size: 28rpx;
  font-weight: bold;

}

.topmore>view:last-child{
  font-size: 24rpx;
}

.playvideo{
  width: 100%;
  height: 400rpx;
}
.playvideo video{
width: 100%;
height: 100%;
}


.hotideo{
  margin-top: 20rpx;
  width: 200rpx;
  text-align: center;
  font-size: 26rpx;
  color: #f97704;
  border-bottom: 2px #f97704 solid;
}

.titles{
  margin-left: 20rpx;
  margin-top: 14rpx;
  font-size: 26rpx;
}

/* 返回顶部 */
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  background: rgba(0,0,0,.3);
  right: 30rpx;
  border-radius: 50%;
}