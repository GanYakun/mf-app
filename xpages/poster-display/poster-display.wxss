/* xpages/poster-display/poster-display.wxss */
page{
  overflow:scroll
}


.shareimage{
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  
}
.poster{
  width: 100%;
  height: 100%;
}

.saveimg{
  width: 320rpx;
  height: 80rpx;
  background-image: linear-gradient(90deg, #ffb23b 0%, #ff7630 100%), 
  linear-gradient(#ed3946, #ed3946);
  background-blend-mode: normal, normal;
  border-radius: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  margin: 0 auto;
  margin-top: 80rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 50rpx;
  
}