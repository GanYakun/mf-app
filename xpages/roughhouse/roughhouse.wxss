}

.xxrbox{
  background-color: rgb(209, 90, 90);
  text-align: center;
}
.distributed{
  margin: 0 auto;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
  margin-top: 30rpx;
  text-align: center;
}

.propForSale{
  width: 100%;
  white-space: nowrap;
  height: 70rpx;
  line-height: 50rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 4rpx dashed #f5f5f5;
}

.propForSaleView{
  display: inline-block;
  margin-right: 20rpx;
  font-size: 30rpx;
  height: 50rpx;
  background: #f2f2f2;
  padding: 0 22rpx;
  border-radius: 25rpx;
}

.propForSaleView:last-child{
  margin-right: 0rpx;
 
}

.selpropForSale{
  color: #f97704;
  background: unset !important;
}

.prent-class{
  background: #ffffff !important;
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.house-screen{
  width: 80%;
  position: fixed;
  z-index: 99;
  background: #fff;
  translate: 1s;
}
.house-screen-show{
  right: 0;
}
.house-screen-hide{
  right: 80%;
}

.selected-options-box{
  background: #ffffff;
  font-size: 26rpx;
  color: #f9740b;
  padding: 0 20rpx;
  border-top: 1rpx #e6e6e6 dashed;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  align-items: center;
}
.selected-options-view{
  display: inline-block;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.selected-options-view>view>view {
  line-height: 50rpx;
  padding:0 30rpx;
	max-height: 50rpx;
	background-color: #f2f2f2;
  border-radius: 25px;
  box-sizing: border-box;
  display: inline-block;
}
.selected-options-box>view:nth-child(1){
  margin-left: 0;
}

.selected-close{
  margin-left: 0rpx !important;
  margin-top: -15rpx;
  background: unset !important;
  padding: unset !important;
  /* background:#333 !important; */
  height: 40rpx;
  width: 40rpx;
  display: flex !important;
  align-items: center;
  justify-content: center;
  line-height: unset !important;
}
