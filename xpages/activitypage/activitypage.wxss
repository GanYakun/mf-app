
@import "../../utils/font.wxss";
page{
  background-color: #f7f7f7;
  /* overflow: scroll; */
}
.shoplist{
  width: 710rpx;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 345rpx 345rpx;
  grid-column-gap: 20rpx;
  grid-row-gap: 20rpx;
  padding: 20rpx 0 ;
}
.item{
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 14rpx;
  overflow: hidden;
}
.item image{
  height: 230rpx;
}


.bootomview{
display: flex;
justify-content: space-between;
}

.shopname{
  font-size: 22rpx;
}

.fangkuang{
  font-size: 44rpx;
  margin-right: 10rpx;
}

.item image{
  width: 100%;
  height: 260rpx;
  background-color: #ffffff;
  display: block;
}

.price{
  font-size: 22rpx;
  color:#f97004;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.icon-gou1{
  font-size: 28rpx;
  color: #f97004;
  position: absolute;
  margin-top: 18rpx;
}





.jiesuanle{
  background-color: #f97004;
  color: #333;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  height: 100%;
  border-radius: 12rpx;
  margin-left: 20rpx;
}

.shop-list-linear {
  overflow: hidden;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.sample-item {
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.sample-item:first-child {
  margin-top: 20rpx;
}

.sample-item:last-child {
  margin-bottom: 20rpx;
}


.promotionsContent{
  padding: 20rpx;
  width: 100%;
  background: #FE7A32;
}

.snap-up-list{
  width: 100%;
  border-radius: 14rpx;
  overflow: hidden;
  padding: 0 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.snap-up-list .item{
  width: 100%;
  background: #ffffff;
  padding: 0;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}

.snap-up-list .item image{
  width: 312rpx;
  border-radius: 14rpx;
}
.snap-up-message{
  width: calc(100% - 332rpx);
  padding-top: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.snap-up-message .shopname{
  color: #131212;
  font-size: 26rpx;
  font-family: SourceHanSansCN-Medium;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}




.subtitle{
  font-size: 24rpx;
  color: #b5b5b5;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
/* white-space: normal !important; */
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
white-space: pre-wrap;
}
.snap-up-buybox{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 10rpx;
}
.snap-up-price>view:nth-child(1){
  font-family: SourceHanSansCN-Medium;
  font-size: 39rpx;
  color: #f21c1c;
}
.snap-up-price>view:nth-child(2){
  font-family: SourceHanSansCN-Normal;
  font-size: 26rpx;
  color: #b5b5b5;
  text-decoration:line-through;
  text-indent: 8rpx;
}
.snap-up-btn{
width: 138rpx;
	height: 63rpx;
	background-image: linear-gradient(263deg, 
		#ff5228 0%, 
		#ffb83c 100%);
  border-radius: 12rpx;
}
.snap-up-btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 35rpx;
  margin-bottom: 10rpx;
}
.snap-up-btn text{
  font-size: 25rpx;
  color: #ffffff;
 
}
.gou-snap-up{
  display: flex;
  align-items: center;
  position: relative;
  bottom: 8rpx;
}
.gou-snap-up text{
  font-size: 18rpx;
  color: #ffffff;
}
.gou-snap-up-view{
  width: 71rpx;
	height: 7rpx;
	background-color: hsl(0, 0%, 100%,0.37);
  border-radius: 3rpx;
  /* margin-top: 10rpx; */
}
.gou-snap-up-view>view{
  width: 71rpx;
	height: 7rpx;
  width: 23rpx;
	height: 7rpx;
	background-color: #ffffff;
	border-radius: 3rpx 0px 0px 3rpx;
}
.sampletabsview{
  width: 750rpx;
  height: 166rpx;
  /* display: flex; */
  white-space: nowrap;
  background-color: #fff;
}
.sampletabs-item{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  /* background-color: #333; */
  margin-left: 40rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
  text-align: center;
}
.sampletabs-item>image{
    width: 70rpx;
    height: 70rpx;
}
.sampletabstext{
    line-height: 30rpx;
    font-size: 28rpx;
    color: #000000;
}
.Tsampletabstext{
    line-height: 30rpx;
    font-size: 28rpx;
    color: #e88534;
}