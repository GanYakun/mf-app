/* pages/furniture_view/furniture_view.wxss */

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

page {
  background-color: #f2f2f2;
}
.srollimg {
  width: 100%;
  height: 562rpx;
  display: inline-block;
}

.srollimg image {
  width: 100%;
  height: 100%;
}

.scroll-view_H {
  white-space: nowrap;
}


.white-bg {
  background-color: #fff;
  padding: 20rpx;
}

.author {
  align-items: center;
}

.author .author-left .author-img {
  width: 124rpx;
  height: 124rpx;
}

.author .author-left .author-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.author .author-right {
  margin-left: 30rpx;
}

.design {
  color: #353535;
  font-size: 14px;
  margin-top: 20rpx;
}

.design .nowarp {
  overflow: hidden;
  text-overflow: ellipsis;
}

.button {
  margin-top: 20rpx;
}

.btn1 {
  border: 0;
  background-color: transparent;
  outline: none;
  background: #cb0d1c;
  color: #FFF;
  width: 48%;
  height: 60rpx;
  color: #FFF;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
}

.btn2 {
  border: 0;
  background-color: transparent;
  outline: none;
  background: #666666;
  color: #FFF;
  width: 48%;
  height: 60rpx;
  color: #FFF;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
}

.roommates-works {
  margin-top: 20rpx;
}

.similar-works {
  margin-top: 20rpx;
}

.works-list {
  margin-top: 20rpx;
}

.similar-works .works-list .item {
  width: 344rpx;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.similar-works .works-list .item .img {
  width: 344rpx;
  height: 258rpx;
}

.similar-works .works-list .item .img image {
  width: 100%;
  height: 100%;
}
.similar-works .works-list .item .context{
  padding: 20rpx;
  box-sizing: border-box;
}
.similar-works .works-list .item .title{
  font-size: 14px;
  color: #333333;
}
.similar-works .works-list .item .desc {
  color: #666666;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  white-space: normal;
  -webkit-box-orient: vertical;
}

.banner-swiper {
  position: relative;
  margin-top: 40rpx;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.banner-swiper .img {
  position: relative;
}

swiper {
  display: block;
  height: 500rpx;
  position: relative;
}

.slide-image {
  width: 100%;
  display: block;
  margin: 0 auto;
  height: 450rpx;
  margin-top: 25rpx;
}

.banner-swiper .title {
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #FFF;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0px;
  font-size: 14px;
}

.active {
  margin-top: 0rpx;
  height: 500rpx;
}

.Dots {
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
}

.indicatorDots {
  width: 24rpx;
  height: 8rpx;
  background: #f3f3f3;
  color: #FFF;
  opacity: 1;
  margin: 20rpx 10rpx 0;
  border-radius: 2rpx;
}

.dots-active {
  width: 24rpx;
  height: 8rpx;
  background: #d8212f;
  color: #FFF;
  opacity: 1;
  margin: 20rpx 10rpx 0;
  border-radius: 2rpx;
}