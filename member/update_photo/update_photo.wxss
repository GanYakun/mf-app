/* member/update_photo/update_photo.wxss */
page {
  background: #f1f1f1;
}

.lins {
  width: 100%;
  height: 1px;
  background: #ccc;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 25%;
}

.img-view {
  width: 300rpx;
  height: 300rpx;
  clear: both;
  margin: 0 auto;
  border: 1px solid #e5e5e5;
  padding: 3px;
  background: #fff;
  position: relative;
}

.img-view image {
  width: 300rpx;
  height: 300rpx;
  border: 0px;
  vertical-align: top;
}

.xuanze {
  width: 300rpx;
  height: 80rpx;
  background: #f97704;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

.btn-main {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 5px;
  background: #e7e7e7;
  position: fixed;
  bottom: 0;
}

.btn {
  height: 80rpx;
  border-radius: 4rpx;
  background: #f97704;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}