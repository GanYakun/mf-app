@import "../../utils/font.wxss";
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #f7f7f7;
}
.casesearch{
  border: 1px solid #ddd;
    margin:20rpx;
    background: #FFF;
    border-radius: 84rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    display: flex;

}
.casesearch .input{
  flex: 1;
}
.casesearch input{
  height: 80rpx;
    line-height: 80rpx;
}
.icon-sousuo{
  display: block;
  width:40rpx;
  height:40rpx;
  text-align: center;
    line-height: 80rpx;
    font-size: 18px;
}

