/* member/privilege-package-list/privilege-package-list.wxss */
.page-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  background: #efefef;
}

.privilege-package-scroll {
  flex: 1;
  overflow: hidden;
}

.privilege-package-item-wrapper {
  padding: 10rpx 18rpx;
  box-sizing: border-box;
}

.privilege-package-item-wrapper:first-child {
  padding-top: 20rpx;
}

.privilege-package-item-wrapper:last-child {
  padding-bottom: 20rpx;
}

.privilege-package-item {
  border-radius: 30rpx;
  box-sizing: border-box;
  background: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  overflow: hidden;
}

.privilege-package-pro-image {
  display: block;
  width: 156rpx;
  height: 156rpx;
  background: #f2f2f2;
  margin: 20rpx;
  flex-shrink: 0;
}

.divider-view {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  flex-shrink: 0;
}

.dot-line {
  flex: 1;
  border-right: thin dotted #e6e6e6;
  margin: 8rpx 0;
}

.circle1, .circle2 {
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  background: #efefef;
}

.circle1 {
  margin-top: -15rpx;
}

.circle2 {
  margin-bottom: -15rpx;
}

.privilege-package-pro-info {
  flex: 1;
  overflow: hidden;
  /* background: #f00; */
  margin: 0 20rpx;
  display: flex;
  align-items: stretch;
  flex-direction: column;
}

.privilege-package-pro-name {
  font-size: 26rpx;
  font-family: PingFang;
  font-weight: bold;
  color: #333333;
}

.privilege-package-pro-desc-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: stretch;
}

.privilege-package-pro-desc {
  font-size: 20rpx;
  font-family: PingFang;
  font-weight: 500;
  color: #666666;
  line-height: 24rpx;
  flex: 1;
}

.privilege-package-btn-use {
  width: 120rpx;
  height: 60rpx;
  box-sizing: border-box;
  background: #FDEEDF;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-family: PingFang;
  font-weight: bold;
  color: #FAAA1F;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0 10rpx 10rpx;
}

.privilege-package-btn-use-disabled {
  background: #E6E6E6;
  color: #999999;
}

.privilege-package-pro-time {
  font-size: 20rpx;
  font-family: PingFang;
  font-weight: 500;
  color: #ADADAD;
  line-height: 24rpx;
}

.privilege-package-bottom {
  display: block;
  width: 149rpx;
  height: 275rpx;
  position: absolute;
  bottom: -80rpx;
  right: -20rpx;
}