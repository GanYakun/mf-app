@import "/utils/font.wxss";
@import "/utils/weui.wxss";

page {
  background-color: #f7f7f7;
}

.listbox {
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  width: calc(100% - 80rpx);
  margin: 0 auto;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.hideimg {
  width: 100rpx;
}

.hideimg image {
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
}


.content {
  margin-left: 20rpx;
  width: calc(80% - 20rpx);
  margin: 0 auto;
  margin-top: 20rpx;
  
  background:#ffffff;
  padding: 20rpx;
}

.username {
  font-size: 28rpx;
  color: #666666;
}

.koubeicontent {
  line-height: 35rpx;
  font-size: 24rpx;
  color: #888888;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;

}

.text-collapse {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.calltext {
  font-size: 24rpx;
  color: #F97704;
}

.userimage {
  display: grid;
  grid-template-columns: auto auto auto;
  grid-gap: 15rpx;
  margin-top: 20rpx;
}

.messagetime {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #d3d3d3;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.page-comments {
  background-color: #ececec;
  padding: 20rpx;
  border-radius:12rpx;
}

.allow_comments_on {
  display: flex;
}

.allow_comments_on>view:first-child {

  font-size: 24rpx;
  color: #566c92;
  white-space: pre-line;
  word-break: keep-all;
  word-wrap: break-word;
  white-space: pre-line;
}

.allow_comments_on>view:last-child {
  color: #666666;
  font-size: 24rpx;
  text-overflow: ellipsis;
  word-wrap: break-word
}










