.listimage{
width:100%;
position: relative;
}
.listimage-logo{
  position: absolute;
  width: 170rpx;
  height: 100rpx;
  top: 20rpx;
  left: 20rpx;
}
.listimage image{
  width: 100%;
  height: 0;

  border-radius: 12rpx;
}
.listimage-logo image{
  width: 0;
  height: 100%;
  display: block;
  position: absolute;
  right: 0;
  top: 0;
}

.jieshaobox{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 26rpx;
  padding-bottom: 15rpx;
  margin-top: -10rpx;
}
.jieshao{
  font-family: MicrosoftYaHei;
  /* max-width: 73%; */
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 66rpx;
	letter-spacing: 0rpx;
	color: #000000;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:1; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
  white-space:pre-wrap;

}.itemPriceView{
  font-size: 28rpx;
