/* components/video-item/index.wxss */
.video-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.top-bar {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top-bar image {
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
}

.top-bar view {
  width: calc(100% - 120rpx);
  font-size: 28rpx;
  color: #000;
  margin-left: 20rpx;
}

.video-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #000;
}

.player {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.video-info {
  width: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.video-name {
  width: 100%;
  font-size: 28rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.bottom-bar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left, .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.left .collect, .left .share, .right .like, .right .comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
}

.left .collect image, .left .share image, .right .like image, .right .comment image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}

.left .collect view, .left .share view, .right .like view, .right .comment view {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-right: 40rpx;
}

.collect-memheaders {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.memheader {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-left: 6rpx;
  margin-left: 6rpx;
}

.memheader:first-child {
  margin-left: 0;
}

.memheader:last-child {
  margin-right: 0;
}

.thumbnail {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.play-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.play {
  width: 60rpx;
  height: 60rpx;
}

.play-wrapper view {
  color: #fff;
  margin-top: 20rpx;
}

button.btn-share {
  width: unset !important;
  height: unset !important;
  background: #fff !important;
  padding: 0 !important;
  margin: 0 !important;
}



