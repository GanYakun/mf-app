/* components/floor-item/index.wxss */
.floor-item-sample {
  /* background-color: #ffffff; */
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
}

.titles {
  display: flex;
  width: 100%;
  align-items: baseline;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000000;
}

.sub-title {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #666666;
}

.more{
  font-size: 28rpx;
  color: #000000;
  margin-left: auto;
}

.build-list {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.build-item {
  color: #333;
  font-size: 26rpx;
  display: inline-block;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  border-right: 1px #333 solid;
  line-height: 26rpx;
}

.build-item:first-child {
  padding-left: 0;
}

.build-item:last-child {
  padding-right: 0;
  border-right: none;
}

.filter-list,
.filter-list1,
.filter-list2 {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx
}

.filter-list .filter-item {
  display: inline-block;
  width: 17%;
  margin-right: 1%;
  text-align: center;
  border-radius: 130rpx;
  font-size: 24rpx;
  color: #444
}
.filter-item > image{
  margin-left: 23rpx;
  margin-bottom: 10rpx;
}
.cauMask{
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  border-radius: 130rpx;
  margin-top: 0;
  background-color: hsl(0, 0%, 20%,0.5);
  text-align: center;
  line-height: 130rpx;
}

.banner-list {
  width: 100%;
  padding-top: 20rpx;
}

.sample-list {
  width: 100%;
}

.sample-item {
  width: 100%;
  margin-top: 20rpx;
}

