/* components/Hotscreen/Hotscreen.wxss */
@import "../../utils/font.wxss";
.mask{
  position:fixed;
  width:100%;
  height:100%;
  background: #363636;
  opacity: 0.5;
  z-index: 101;
  top: 0;
}

.Drawer{
  position:fixed;
  background-color: #eeeeee;
  width:300px;
  height:100%;
  right:-300px;
  z-index: 200;
  top: 0%;
  border-top-left-radius: 40rpx;
  overflow: hidden;
}

.FilterElements{
  padding: 20rpx 30rpx 10rpx 30rpx;
  width: calc(100% - 60rpx);
  display: grid;
  grid-template-columns: 33.33% 33.33% 33.33%;
  grid-gap: 10rpx;
  grid-column-gap: 10rpx;
  background-color: #ffffff;
  justify-content: center;
}

.son{
  background-color: #f6f5f5;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size:24rpx;
  color: #666666;
  border-radius: 12rpx;
justify-content: center;
  border: 1px #f6f5f5 solid;
  /* text-overflow:ellipsis; */
word-wrap:break-word;
}


.reallychioce{
  border: 1px #f97004 solid;
  color: #f97004;
  background-color: #ffffff;
  -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
        box-sizing: border-box;
}

.Topview{
height: 92%;
overflow: scroll;
}
.reset{
  height: 8%;
  width: 100%;
}
.resettext{
  height: 100%;
  width: 100%;
  display: flex;
}
.resettext>view{
  width: 50%;
 display: flex;
 justify-content: center;
 align-items: center;
  font-size: 28rpx;
}
.resettext>view:nth-child(1){
background-color: #ffffff;

}
.resettext>view:nth-child(2){
  background-color: #f97004;
  color: #ffffff;
}

.scrTitle{
  background-color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  padding: 30rpx 0 0 30rpx;
}

.black{
  background-color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding: 30rpx 0 30rpx 30rpx;
}