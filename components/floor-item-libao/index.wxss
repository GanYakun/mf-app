.activity-pro-list {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: nowrap;
}

.activity-pro-item {
  min-width: 42%;
  background: #fff;
  margin-left: 20rpx;
  margin-right: 20rx;
  border-radius: 12rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.activity-pro-item:first-child {
  margin-left: 0;
}

.activity-pro-item:last-child {
  margin-right: 0;
}

.activity-pro-image {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.activity-promotions-name {
  text-align: center;
  padding-top: 0rpx;
  padding-bottom: 10rpx;
  font-size: 24rpx;
}