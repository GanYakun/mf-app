/* components/floor-item-shop/index.wxss */
@import "/utils/font.wxss";

.floor-item-shop {
  width: 100%;
}

.titles {
  display: flex;
  width: 100%;
  align-items: baseline;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000000;
}

.sub-title {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #666666;
}

.more-vr {
  font-size: 28rpx;
  color: #000000;
  margin-right:30rpx;
  margin-left: auto;
  display:flex
}

.more{
  font-size: 28rpx;
  color: #000000;
}

.build-list {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.build-item {
  color: #333;
  font-size: 26rpx;
  display: inline-block;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  border-right: 1px #333 solid;
  line-height: 26rpx;
}

.build-item:first-child {
  padding-left: 0;
}

.build-item:last-child {
  padding-right: 0;
  border-right: none;
}

.filter-list, .filter-list1, .filter-list2 {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.filter-list .filter-item {
  display: inline-block;
  width: 17%;
  margin-right: 1%;
  text-align: center;
  border-radius: 130rpx;
  font-size: 24rpx;
  color: #444;
}

.filter-list .filter-item:last-child {
  margin-right: 0;
}

.filter-list1 .filter-item {
  display: inline-block;
  height: 130rpx;
  width: 130rpx;
  line-height: 130rpx;
  text-align: center;
  border-radius: 130rpx;
  color: #ffffff;
  font-size: 26rpx;
  border: #f7f7f7 5rpx solid; 
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.filter-list1 .filter-item:first-child {
  margin-left: 0;
}

.filter-list1 .filter-item:last-child {
  margin-right: 0;
}

.filter-list2 .filter-item {
  display: inline-flex;
  min-width: 25%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #444;
  font-size: 26rpx;
}
.filter-list2 .filter-item:first-child {
  justify-content: flex-start;
}

.filter-list2 .filter-item:last-child {
  justify-content: flex-end;
}

.cauMask{
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  border-radius: 130rpx;
  margin-top: 0;
  background-color: hsl(0, 0%, 20%,0.5);
  text-align: center;
  line-height: 130rpx;
}

.banner-list {
  width: 100%;
  padding-top: 20rpx;
}

.ad-image-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.ad-image-item {
  width: calc(50% - 10rpx);
  margin-top: 20rpx;
  overflow: hidden;
  border-radius: 16rpx;
  box-sizing: border-box;
  position: relative;
}

.ad-image-item:nth-child(odd) {
  margin-right: 10rpx;
}

.ad-image-item:nth-child(even) {
  margin-left: 10rpx;
}

.vr-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 3;
  color: #f97004;
}

.icon-VRSolidDFil {
  font-size: 50rpx;
}

.ad-image {
  width:100%;
  height:240rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.ad-desc {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  line-height:70rpx;
  background:  -webkit-linear-gradient(bottom,#333333, hsla(0, 0%, 0%, 0.0));
  font-size: 26rpx;
  color: #fff;
  text-align: center;
}