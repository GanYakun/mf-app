/* components/select-depart/select-depart.wxss */
.pickerbackview{
	width: 100%;
  height: 100vh;
  background-color: #ffffff;
  position: fixed;
  z-index: 9999;
  top: 0;
}
.picker-scroll{
  width: 100%;
  height: 100%;
}
.pickerback{
	width: 100%;
	height: 400rpx;
	background-color: #f5f5f5;
}
.pickertext{
  display: flex;
  align-items: center;
  justify-content: center;
}
.btnview{
  margin-top: 70rpx;
	width: 100%;
	height: 90rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
}
.btn{
	width: 300rpx;
	height: 90rpx;
	border-radius: 20rpx;
	line-height: 90rpx;
  text-align: center;
}
.btn-cancel{
  background-color: #f5f5f5;
  color: #abaaa8;
}
.btn-sure{
  background-color: #ffb140;
  color: #ffffff;
}