/* components/video-swiper/index.wxss */
.video-swiper-container {
  width: 100%;
  height: 100%;
  background-color: black;
}

.video-swiper {
  width: 100%;
  height: 100%
}

.video_item {
  height: calc(100% - 128rpx);
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 128rpx;
}

.bottom-controls {
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
}

.fullscreen-controls {
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
}

.video-controls {
  width: calc(100% - 40rpx);
  height: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-content {
  width: 100%;
}

.btn-play-pause, .btn-fullscreen {
  width: 80rpx;
  height: 80rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.progress-bar {
  display: block;
  position: relative;
  flex-grow: 1;
  z-index: 99;
  margin-top: 0;
  margin-bottom: 0;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.progress {
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.exit-full-screen {
  width: 64rpx;
  height: 64rpx;
  background: #f00;
}

.time {
  color: white;
  font-size: 28rpx;
}