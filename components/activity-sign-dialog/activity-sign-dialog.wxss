/* components/activity-sign-dialog/activity-sign-dialog.wxss */
.dialog-content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  z-index: 10000;
  left: 0;
  right: 0;
  top: 0;
}
.center-layout{
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.qr-code-bg{
  margin-top: 42rpx;
  position: relative;
  align-items: center;
}
.qr-code-img{
  width: 198rpx;
  height: 198rpx;
  margin-bottom: 30rpx;
}
.qr-code{
  width: 100%;
  position: absolute;
  top: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
}
