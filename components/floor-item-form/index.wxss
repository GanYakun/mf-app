/* components/floor-item-form/index.wxss */
@import "/utils/font.wxss";

.form1 {
  background: #fff;
  padding: 20rpx;
  border-radius: 6px;
  box-sizing: border-box;
}

.form1 .tip {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

.form1 e {
  color: #f97705;
  font-size: 26rpx;
}


.form1 .main input {
  color: #333;
  width: calc(100% - 30px);
  font-size: 24rpx;
  margin-left: 20rpx;
}

.form1 .main .item {
  border: 1px solid #e5e5e5;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f7f7f7;
  align-items: center;
  padding-left: 20rpx;
  margin-top: 20rpx;
  width: 45%;
  border-radius: 6rpx;
  color:#bbb;
}

.form1 .main .item .icon {
  width: 20px;
  height: 20px;
}

.form1 .main .item .icon image {
  width: 100%;
  height: 100%;
}

.form1 .btn {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #f97704;
  border-radius: 6rpx;
  width: 100%;
  margin: 20rpx auto 0;
  height: 70rpx;
  line-height: 70rpx;
}

.flex {
  display: flex;
  align-items: center;
}

.flex-r-s {
  display: flex;
  justify-content: space-between;
}

.flex-r-s .name {
  font-weight: bold;
  font-size: 34rpx;
  color: #000;
}

.nameandphonepla{
  color:#bbbbbb;
}

.adv {
  background-color: #fff;
  padding: 20rpx;
  padding-bottom: 0;
}

.adv .advleft {
  width: 30%;
  text-align: center;
}

.adv .advleft .text1 {
  height: 40rpx;
  line-height: 40rpx;
  color: #ff2222;
  font-size: 24rpx;
}

.adv .advleft .text2 {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #797979;
}

.adv .advright {
  width: calc(100% - 120px);
  font-size: 22rpx;
  color: #666666;
  height: 80rpx;
  line-height: 40rpx;
}