/* components/floor-item-designer/index.wxss */
@import "/utils/font.wxss";

.floor-item-designer {
  /* background-color: #ffffff; */
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
}

.titles {
  display: flex;
  width: 100%;
  align-items: baseline;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000000;
}

.sub-title {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #666666;
}

.more{
  font-size: 28rpx;
  color: #000000;
  margin-left: auto;
}

.build-list {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.build-item {
  color: #333;
  font-size: 26rpx;
  display: inline-block;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  border-right: 1px #333 solid;
  line-height: 26rpx;
}

.build-item:first-child {
  padding-left: 0;
}

.build-item:last-child {
  padding-right: 0;
  border-right: none;
}

.filter-list, .filter-list1, .filter-list2 {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.filter-list .filter-item {
  display: inline-block;
  width: 17%;
  margin-right: 1%;
  text-align: center;
  border-radius: 130rpx;
  font-size: 24rpx;
  color: #444;
}

.filter-list .filter-item:last-child {
  margin-right: 0;
}

.filter-list1 .filter-item {
  display: inline-block;
  height: 130rpx;
  width: 130rpx;
  line-height: 130rpx;
  text-align: center;
  border-radius: 130rpx;
  color: #ffffff;
  font-size: 26rpx;
  border: #f7f7f7 5rpx solid; 
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.filter-list1 .filter-item:first-child {
  margin-left: 0;
}

.filter-list1 .filter-item:last-child {
  margin-right: 0;
}

.filter-list2 .filter-item {
  display: inline-flex;
  /* min-width: 25%; */
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #444;
  font-size: 26rpx;
}
.filter-list2 .filter-item:first-child {
  justify-content: flex-start;
}

/* .filter-list2 .filter-item:last-child {
  justify-content: flex-end;
} */

.cauMask{
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  border-radius: 130rpx;
  margin-top: 0;
  background-color: hsl(0, 0%, 20%,0.5);
  text-align: center;
  line-height: 130rpx;
}

.banner-list {
  width: 100%;
  padding-top: 20rpx;
}

.ad-image-list {
  width: 100%;
  margin-top: 20rpx;
}

.swiper-page {
  width: 100%;
  height: auto;
}

.swiper-page-item {
  width: 100%;
}

.page-list {
  width: 100%;
}

.page-list-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 10rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.page-list-item:first-child {
  margin-top: 0;
}

.ad-image {
  width: 300rpx;
  height: 100%;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.ad-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 12rpx;
  flex-grow: 1;
  height: 225rpx;
  padding: 15rpx 0;
  background: #fff;
  box-sizing: border-box;
  font-size:28rpx;
}

.ad-info-title-wrapper {
  width: 100%;
}

.ad-info-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.ad-info-frequency {
  font-size: 24rpx;
  color: #888888;
  display: flex;
}

.icon-renqiiconx{
  font-size: 24rpx;
  color:#e82929;
}

.free-design {
  display: flex;
  align-items: center;
  height: 44rpx;
  line-height: 44rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  padding: 0 10rpx;
  background: linear-gradient(to right,#ff984c,#ed752e);
  box-sizing: border-box;
}

.user-evaluation {
  text-align: center;
  border-radius: 10rpx;
  width: 120rpx;
  line-height: 40rpx;
  border: 2rpx solid #f97004;
  color: #f97004;
  box-sizing: border-box;
  font-size: 22rpx;
}

.page-indicator-list {
  width: 100%;
  height: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-indicator-item {
  width: 20rpx;
  height: 6rpx;
  background: #fff;
  margin-left: 3rpx;
  margin-right: 3rpx;
}

.active {
  background: #ff6c00;
} 