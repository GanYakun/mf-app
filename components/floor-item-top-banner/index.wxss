/* components/floor-item-top-banner/index.wxss */
.auto-img {
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.topswiper {
  position: relative;
  width: 100%;
}

.swiper-dot{
  width: 18rpx;
  height: 12rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.swiper-dot-active{
  width: 28rpx;
  height: 10rpx;
  background: #ff6c00;
  border-radius: 6rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

/* 轮播图指示点的位置 */
.swiper-dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 35rpx;
  /* padding: 20rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  letter-spacing: 40rpx;
  box-sizing: border-box;
}

.swiper_image {
  width: 100%;
}

.swiper_image swiper-item {
  background-size: contain;
  background-repeat: no-repeat;
}

.banner {
  display: block;
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}