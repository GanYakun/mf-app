.content {
  /* margin-top: 30rpx; */
  display: grid;
  grid-template-columns: 48.5% 48.5%;
  grid-row-gap: 20rpx;
  grid-column-gap: 20rpx;
  /* background-color: #ffffff; */
  width: 710rpx;
  margin: 20rpx auto;

}

.cintentimg {
  width: 100%;
  background-color: #ffffff;
  border-right: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.spot-good {
  width: 40rpx;
  height: 40rpx;
  /* background-color: red; */
  position: absolute;
  top: 0;
  right: 15rpx;
}

.image-pic {
  width: 342rpx;
  height: 256rpx;
}

.inaddress {
  font-size: 25rpx;
  white-space: pre-wrap;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 6rpx;
}

.frequency {
  font-size: 25rpx;
  margin-top: 5rpx;
  color: #f97704;
  text-align: center;
}

.frequency>text {
  font-size: 19rpx;
}

.imageicon {
  width: 50rpx;
  position: absolute;
  margin-top: 10rpx;
  margin-left: 35%;

}

.imageicon image {
  width: 100%;
  height: 0;
}