/* components/activity-floor-item/index.wxss */
.activity-floor-item {
  width: 100%;
  color: #333;
}

.title-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.title-left {
  font-size: 34rpx;
  font-weight: bold;
  color: #000000;
}

.activity-time-right {
  margin-left: auto;
  border-radius: 3px;
  font-size: 24rpx;
  color: #f97704;
}

.year-month-day {
  background-color: #FFEDE1;
  padding: 10rpx;
  margin-right: 10rpx;
}

.ad-image-list {
  width: 100%;
  margin-top: 20rpx;
}

.activity-pro-list {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: nowrap;
}

.activity-pro-item {
  min-width: 42%;
  background: #fff;
  margin-left: 20rpx;
  margin-right: 20rx;
  border-radius: 12rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.activity-pro-item:first-child {
  margin-left: 0;
}

.activity-pro-item:last-child {
  margin-right: 0;
}

.activity-pro-image {
  width: 100%;
  height: 220rpx;
}

.activity-pro-name {
  height: 40rpx;
  width: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.activity-pro-price {
  width: 100%;
  text-align: center;
  border-radius: 3px;
  padding-bottom: 10rpx;
}

.activity-pro-price>view:first-child {
  text-align: center;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #7f7f7f;
  
}

.activity-pro-price>view:last-child {
  text-align: center;
  font-size: 24rpx;
  color: #ff0000;
  font-weight: normal;
}

.ad-desc {
  width: calc(100% - 40rpx);
  padding: 0 20rpx;
  background-color: #ffffff;
  white-space: pre-wrap;
  margin-top: -10rpx;
  line-height: 40rpx;
}

.item-box{
  width: 100%;
  box-sizing: border-box;
  /* justify-content: space-between; */
  margin-top: 20rpx;
  /* white-space: nowrap; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item-box-view{
  display: inline-block;
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 20rpx;
  /* margin-left: 10rpx;
  margin-right: 10rpx; */
}
.item-box-view:nth-child(1),.item-box-view:nth-child(2){
  margin-top: 0rpx !important;
}

