/* components/claim-coupons-dialog/index.wxss */
.claim-coupons-dialog__container {
  position: fixed; 
  left:0; 
  top:0; 
  width: 100vw; 
  height: 100vh; 
  background: rgba(0, 0, 0, .4); 
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}

.claim-coupons-dialog__bg {
  position: relative;
  margin: 0 80rpx;
  background: linear-gradient(0deg, #FEA139 0%, #FA6A23 100%);
  border-radius: 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  overflow: hidden;
}

.claim-coupons-dialog__title {
  font-size: 36rpx;
  color: white;
  text-align: center;
  margin: 56rpx 0 46rpx 0;
  z-index: 99;
}

.claim-coupons-dialog__content {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin: 0 68rpx 70rpx 58rpx;
  box-sizing: border-box;
  filter: drop-shadow(-10rpx 5rpx 0rpx rgba(115,53,4,0.16));
  z-index: 99;
}

.claim-coupons-dialog__top {
  padding: 49rpx 15rpx;
  background: white;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  box-sizing: border-box;
}

.claim-coupons-dialog__goods-name {
  font-size: 30rpx;
  color: #F96522;
  text-align: center;
}

.claim-coupons-dialog__tips {
  font-size: 26rpx;
  color: #000000;
  text-align: center;
  margin-top: 15rpx;
}

.claim-coupons-dialog__border-image {
  width: 100%;
  height: 100%;
}

.claim-coupons-dialog__qrcode-title {
  text-align: center;
  font-size: 26rpx;
  color: #F54F1B;
  padding: 15rpx 15rpx 30rpx 15rpx;
  box-sizing: border-box;
  background: white;
}

.claim-coupons-dialog__bottom {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  background: white;
}

.claim-coupons-dialog__qrcode-image {
  width: 243rpx;
  height: 243rpx;
  margin: 0 auto 64rpx auto;
}

.claim-coupons-dialog__bottom-coin {
  position: absolute;
  right: -20rpx;
  bottom: -16rpx;
  width: 86rpx;
  height: 101rpx;
}

.circle1 {
  position: absolute;
  left: -30rpx;
  top: -37rpx;
  width: 218rpx;
  height: 218rpx;
  border-radius: 218rpx;
  background: linear-gradient(0deg, #FEA139 0%, #FA6A23 100%);
  filter: drop-shadow(0rpx 0rpx 0rpx rgba(115,53,4,0));
  z-index: 1;
}

.circle2 {
  position: absolute;
  right: -127rpx;
  top: 50%;
  width: 218rpx;
  height: 218rpx;
  border-radius: 218rpx;
  background: linear-gradient(0deg, #FEA139 0%, #FA6A23 100%);
  filter: drop-shadow(0rpx 0rpx 0rpx rgba(115,53,4,0));
  z-index: 1;
  transform: translateY(-50%);
}

.circle3 {
  position: absolute;
  left: -61rpx;
  bottom: -23rpx;
  width: 218rpx;
  height: 218rpx;
  border-radius: 218rpx;
  background: linear-gradient(0deg, #FEA139 0%, #FA6A23 100%);
  filter: drop-shadow(0rpx 0rpx 0rpx rgba(115,53,4,0));
  z-index: 1;
}

.close {
  width: 56rpx;
  height: 56rpx;
  margin: 0 80rpx 27rpx 80rpx;
}
