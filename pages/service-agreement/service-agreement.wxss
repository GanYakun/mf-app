/* pages/service-agreement/service-agreement.wxss */
page, .service-agreement__page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
} 

.service-agreement__container {
  width: 100%;
  height: calc(100% - var(--left-button-nav-height));
}

.service-agreement__scroll {
  width: 100%;
  height: 100%;
}

.service-agreement__scroll-content {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  overflow: hidden;
  justify-content: center;
  min-height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}