page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 100%;
}

.swiper {
  width: 100%;
  height: 100%;
}

.image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 30%;
}

.image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #00f;
}

.list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}

.image-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
}

.page-content {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}

.btn-show-sku-dialog {
  margin: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: coral;
  border-radius: 10rpx;
  box-sizing: border-box;
  text-align: center;
  color: white;
}