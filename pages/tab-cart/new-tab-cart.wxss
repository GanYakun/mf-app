@import "/utils/font.wxss";
page {
  background-color: #f7f7f7;
}
.button_bootm {
  /* position: absolute; */
  height: 71rpx;
  width: 100%;
  background-color: #ffffff;
  margin: 0 auto;
  /* border-radius: 100rpx; */
  overflow: hidden;
  margin-top: 20rpx;
}
.bootmbox {
  display: flex;
  /* width: 100%; */
  height: 100%;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx 0 49rpx;
  box-sizing: border-box;
}
.circlebox {
  width: 27rpx;
  height: 27rpx;
  border: thin #999999 solid;
  border-radius: 50%;
  box-sizing: border-box;
  /* margin-left: 5%; */
}
.allcirclebox {
  width: 27rpx;
  height: 27rpx;
  border-radius: 50%;
  /* margin-left: 5%; */
  background-color: #f97705;
  text-align: center;
  line-height: 12rpx;
  border: thin transparent solid;
  box-sizing: border-box;
  /* border: 3rpx #333 solid; */
}
.fonttext {
  font-size: 45rpx;
}
.selectall {
  margin-left: 6rpx;
  color: #343434;
  font-size: 23rpx;
}
.settlement {
  background: linear-gradient(to right, #FE5605, #FF7700);
  margin-left: auto;
  padding: 0 15rpx;
  height: 70rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}
.cartlist {
  width: calc(100% - 44rpx);
  margin: 0 auto;
  background: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
}
.cartlistone {
  display: flex;
  /* align-items: center; */
  /* margin-top: 20rpx; */
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: #ffffff;
}
.cartcircle {
  margin-left: 17rpx;
  width: 27rpx;
  height: 27rpx;
  border-radius: 50%;
  border: thin #7d7d7d solid;
  display: flex;
  align-items: center;
  text-align: center;
  box-sizing: border-box;
}
.ischange {
  margin-left: 17rpx;
  width: 27rpx;
  height: 27rpx;
  border-radius: 50%;
  border: thin transparent solid;
  box-sizing: border-box;
  background-color: #f97705;
  text-align: center;
  line-height: 12rpx;
}
.cartimage {
  margin-left: 10rpx;
  width: 149rpx;
  border-radius: 12rpx;
  overflow: hidden;
  /* margin-bottom: auto; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.cartimage image {
  width: 100%;
  height: 112rpx;
}
.shopname {
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #666666;
  width: calc(100% - 149rpx - 66rpx);
  line-height: 43rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.shopprice {
  font-size: 20rpx;
  color: #ff3400;
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-top: 30rpx;
}
.shopnum {
  display: flex;
  width: 100%;
}
.changenum {
height: 44rpx;
line-height: 34rpx;
  border: 1rpx #cccccc solid;
  font-size: 36rpx;
padding: 0rpx 12rpx;
box-sizing: border-box;
color: #000000;
}
.shopnumber {
  height: 44rpx;
  border-top: 1rpx #cccccc solid;
  border-bottom: 1rpx #cccccc solid;
  font-size: 26rpx;
  text-align: center;
  line-height: 40rpx;
  box-sizing: border-box;
  width: 40%;
  color: #000000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.deleteicon {
  font-size: 28rpx;
  margin-left: auto;
  margin-right: 20rpx;
  margin-top: auto;
}
.icon-gougou {
  color: #ffffff;
  font-size: 20rpx;
}
.guige {
  color: #000000;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  font-family: PingFang-SC-Regular;
  /* height: 60rpx; */
  /* line-height: 60rpx; */
}
.zanwushuju {
  width: 100%;
  margin-top: 30rpx;
  color: #999999;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
}
.icon-lajitong {
  font-size: 30rpx;
  color: #999999;
}
.shopnumberNoClick{
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 12rpx;
  border: 0.5px solid #cccccc;
  padding: 2rpx 10rpx;
  font-size: 24rpx;
  text-align: center;
  font-weight: bold;
}
.deleteshop{
  display: flex;
  margin-left: auto;
}
.deleteshop>view:nth-child(1){
  width: 92%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:26rpx;
  font-family: SourceHanSansCN-Regular;
  color: #000000;
}
.shopprice>view:nth-child(1){
  display:flex;
  align-items:flex-end;
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  letter-spacing: 0px;
  color: #515151 ;
}
.online-payment,.offline-payment{
  width: 150rpx;
  height: 50rpx;
  background-color: #fe2311;
  border-radius: 25rpx;
  color:#ffffff;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}
.offline-payment{
  background-color: #f9740b !important;
}
.select-all{
  display: flex;
  box-sizing: border-box;
  padding-left: 17rpx;
  width: calc(100% - 40rpx);
  background: #ffffff;
  height: 57rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  align-items: center;
}
.explain{
  margin-top: 20rpx;
  color: #929292;
}
.explain-title{
  font-family: PingFang-SC-Regular;
  font-size: 26rpx;
  color: #000000;
}
.payment-method{
  font-family: SourceHanSansCN-Light;
  font-size: 23rpx;
  color: #fe2311;
  width: 100%;
}
.price-indication{
  font-size:21rpx;
}
.bootom-border{
  width: 660rpx;
  height: 2rpx;
  background-color: #434343;
  opacity: 0.5;
  margin: 0 auto;
}
.bootom-border:last-child{
  height: 0rpx;
}
.page-scroll{
  margin-bottom: 20rpx;
}
.subtotal{
  color: #515151;
  font-size: 28rpx;
  width: 40%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: end;
}
.shopprice>view:nth-child(1){
  width: 25%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shopprice>view:nth-child(2){
  width: 35%;
}
.transaction-explain{
  margin: 0 auto;
  margin-top: 20rpx;
  width:calc(100% - 44rpx);
  background-color: #ffffff;
  border-radius: 10rpx;
  height: 176rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.total{
  font-family: SourceHanSansCN-Normal;
  font-size: 30rpx;
  color: #343434;
}

.box-pay{
  display: flex;

}
.box-pay>view:nth-child(2){
margin-left: 17rpx;
}

.tips{
  position: fixed;
  z-index: 99;
  top: 50%;
  left: 50%;
  width: 80%;
  background: #ffffff;
  transform: translate(-50%, -50%);    /* 50%为自身尺寸的一半 */
  border-radius: 26rpx;
}
.mark{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 97;
  background:#000000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
}

.tips>view:nth-child(1){
  white-space: pre-wrap;
  text-align: center;
  font-size: 26rpx;
  color: #202020;
}

.tips>view:nth-child(2){
  width: 100%;
  height: 2rpx;
  background:#a1a1a1;

}

.tips>view:nth-child(3){
  padding: 25rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #202020;
}

.onlineAndOffline1{
  color: #f9740b;
}
.onlineAndOffline{
  color: #fe2311;
}