page {
  background-color: #f2f2f2
}

.menu {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box
}

.content {
  width: 90%
}

.content .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  background-size: 100% 100%;
  border: 6rpx solid #fff
}

.border-image {
  border: 6rpx solid #ff6c00 !important
}

.content .image image {
  width: 100%;
  height: 100%;
  border-radius: 50%
}

.swiper-item {
  display: flex;
  height: 200rpx !important;
  flex-direction: column;
  align-items: center
}

.content .title {
  white-space: normal;
  font-size: 22rpx;
  background: hsl(0, 0%, 0%, .5);
  width: 100%;
  height: 100%;
  border-radius: 100%;
  padding: 0 4rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 120rpx;
  box-sizing: border-box;
  text-align: center
}

.detail {
  background: #fff
}

.detail .title {
  margin-bottom: 10rpx;
  font-size: 29rpx;
  margin-left: 20rpx
}

.detail image {
  width: 100%
}

.PageImage {
  margin-top: 10rpx
}

.imagenoselect {
  border: 1px solid transparent
}

.imageselect {
  border: 1px solid #ff7931
}

.tabbar {
  z-index: 999;
  justify-content: center;
  background: #fff;
  display: flex;
  height: 50rpx;
  padding: 0 20rpx;
  width: auto
}

.tabbar .item {
  text-align: center;
  margin: 0 20rpx;
  font-size: 28rpx
}



video {
  width: 100% !important
}



.custom_price {
  margin-bottom: 20rpx;
  border: 2rpx solid #ff6c00;
  background: #fdf3ec;
  border-radius: 10rpx;
  padding: 20rpx
}

.custom_price>view:nth-child(1) {
  display: flex;
  justify-content: space-between
}

.custom_price>view:nth-child(1)>view {
  display: flex;
  align-items: flex-end;
  display: table-cell;
  vertical-align: bottom
}

.allMuch {
  font-size: 26rpx;
  font-weight: 400;
  color: #000;
  height: 100%;
  display: flex;
  align-items: center
}

.custom_price>view:nth-child(2) {
  display: flex;
  justify-content: space-between
}

.custom_btn {
  background: linear-gradient(to right, #ff984c, #ed752e);
  padding: 0 20rpx;
  height: 46rpx;
  line-height: 46rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  text-align: center
}

.wxParse-img {
  display: flex;
  margin-top: -5rpx;
  width: 100% !important
}

.wxParse-p {
  font-size: 20rpx
}

.prevImg {
  transform: rotate(180deg)
}

.appointTitle {
  height: 160rpx;
  white-space: nowrap
}

.appointTitle_item {
  display: inline-block;
  width: 25%
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none
}



.moreImage image {
  display: block
}

.wx-banner-List image {
  margin-top: 10rpx;
  display: block;
}

.scroll-view-box {
  white-space: nowrap;
  width: calc(100% - 80rpx);
  padding: 6rpx 0;
  box-sizing: border-box;
}

.scroll-view-item:last-child{
  margin-right: 0;
}

.scroll-view-item {
  display: inline-block;
  /* margin-right: 30rpx; */
  font-size: 26rpx;
  color: #333333;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.bard-box,
.space-box,
.series-box {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.screen-box {
  background-color: #fff;
  margin-bottom: 10rpx;
}

.select-space{
  background-color: #EEEFF0;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}