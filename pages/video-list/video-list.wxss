/* pages/video-list/video-list.wxss */
page {
  width: 100%;
  height: 100%;
}

.h10 {
  width: 100%;
  height: 20rpx;
}
.tips{
  text-align: center;
  width: 100%;
  height: auto;
}

.container {
  width: 100%;
  height: 100%;
}

.tabs {
  width: 100%;
  height: 80rpx;
  display: flex;
  white-space: nowrap;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.vertical-scroll {
  width: 100%;
 
  background: #f2f2f2;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.tab-item {
  /* min-width: 25%; */
  margin-right: 30rpx;
  height: 100%;
  line-height: 88rpx;
  text-align: center;
  word-break: break-all;
  display: inline-block !important;
  -webkit-line-clamp: 1 !important;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}
.tab-item:last-child{
  margin-right: 0;
}
.tab-selected {
  color: #f97704;
}