/* pages/video_upload/video_upload.wxss */
page{
  background: #f2f2f2;
}
.content{
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
  padding-top: 100rpx;
}
.content .btn{
  height: 68rpx;
  width: 243rpx;
  line-height: 68rpx;
  text-align: center;
  color: #fff;
  background: #ff7931;
  border-radius: 10rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.circle{
  background: #666666;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
}
.content .tips{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}
.count{
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}
.list{
  background: #fff;
}
 
.list .context{
  margin: 0 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.line{
  background: #dddddd;
  width: 100%;
  height: 1px;
}
.list .left{
  display: flex;
  width: 80%;
}
.list .right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.list .item{
  padding-top: 30rpx;
}
.list .image{
  width: 83rpx;
  height: 83rpx;
}
.list .image image{
  width: 100%;
  height: 100%;
}
.list .name{
  font-size: 32rpx;
}
.list .date{
  color: #666666;
  font-size: 26rpx;
}
.list .status{
  font-size: 28rpx;
}
.list .size{
  font-size: 26rpx;
}
.list .color1{
  color: #ff7931;
}
.list .color2{
  color: #666666;
}

.xiashow{
  transition: 0.5s;
  height: 50%;
  width: 100%;
  position: fixed;
  z-index: 21;
  bottom: 0;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.xiahidden{
  transition: 0.5s;
  height: 0;
  width: 100%;
  position: fixed;
  z-index: 21;
  bottom: 0;
  background-color: #ffffff;
}


.mask{
  transition: 1s;
  background-color: rgba(0,0,0,0.3);
  /* filter: blur(2px);     */
  position: fixed;
  top: 0;
  z-index: 20;
  height: 100%;
  width: 100%;
}


.close{
  position: absolute;
  margin-top: 10rpx;
  right: 20rpx;
  z-index: 23;
}

.addvideo{
  width: 96%;
  margin: 0 auto;
  color: #ffffff;
  background-color: #f97004;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-top: 3%;
  line-height: 100rpx;
  border-radius: 8rpx;
}

.VideoPlay{
  width: 94%;
  margin: auto;
  height: calc(80% - 70rpx);
  margin-top: 70rpx;
}
.chiocebrand{
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  text-align: center;
  border: #cccccc 1rpx solid;
  font-size: 24rpx;
  display: inline-block;
  border-radius: 50rpx;
}

.videoname{
  font-size: 28rpx;
  white-space: pre-wrap;
}

.videonameBox{
  width: 80%;
}