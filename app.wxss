@import "/iconfont.wxss";
@import "/utils/font.wxss";

page {
  width: 100%;
  height: calc(100% - constant(safe-area-inset-bottom)) !important;
  height: calc(100% - env(safe-area-inset-bottom)) !important;
  overflow: hidden;
  font-family: PingFang SC, Hiragino Sans GB, Microsoft YaHei, Helvetica, Arial, sans-serif;
  /* background-color: #f2f2f2; */
  /* padding-bottom: constant(safe-area-inset-bottom); */
  padding-bottom: constant(safe-area-inset-bottom);
padding-bottom: env(safe-area-inset-bottom);
}

view, text {
  box-sizing: border-box;
  white-space: unset;
  word-break: break-all;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 200rpx !important;

}

/* 垂直方向上滚动的scroll-view */
.vertical-scroll {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap
}

/* 布局 */
.flex-row{
  display: flex;
  flex-direction: row;
}

.flex {
  display: flex;
  align-items: center;
}

.flex-v-c {
  display: flex;
  align-items: center;
}

.flexC {
  flex: 1;
}

.flex-r-c {
  display: flex;
  justify-content: center;
}

.flex-r-s {
  display: flex;
  justify-content: space-between;
}

.flex_left {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.flex_right {
  display: flex;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.rowC {
  overflow: hidden;
}

.flex-1 {
  flex: 1 0 0;
}

