@import '../../../utils/font.wxss';
@import "../../../utils/weui.wxss";
page {
  background-color: #F7F7F7;
}

.container {
  width: 100%;
}

.container .tabList {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  /* border-top: 1px solid #f1f1f1; */
}

.container .tabList .tab {
  display: flex;
  width: 25%;
  font-size: 27rpx;
  color: #333333;
  text-align: center;
  justify-content: center;

}

.selected {
  color: #f97704;
  position: relative;
}

.selected:after {
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  display: block;
  width: 100%;
  height: 3rpx;
  border-radius: 15rpx;
  background-color: #f97704;
}

.swiper-box {
  width: 100%;
}

.orderList {
  height: 100%;
  box-sizing: border-box;
}

.topstore {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  padding-bottom: 20rpx;
}

.storename {
  font-size: 25rpx;

}

.storetext {
  margin-left: auto;
  font-size: 25rpx;
  color: #f97704;

}

.commot {
  width: 100%;
  background: #fff;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  /* box-shadow: 2px 2px 10px #eee; */
  /* border: 1rpx solid #eee; */
  margin-bottom: 20rpx;
}

.ordertop {
  display: flex;
  /* justify-content: space-between; */
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  background-color: #f9f9f9;
}

.ordertop>image {
  width: 260rpx;
  height: 150rpx;
}

.title-t {
  font-size: 12px;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tongj {
  color: #999;
  margin-top: 20rpx;
}

.tatol {
  color: #f97704;
  font-size: 20rpx;
}

/* 规格 */
.info-title {
  background: #fff;
}

.guige {
  font-size: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  text-align: end;
  padding-right: 77rpx;
}

.postage {
  width: 100%;
  height: 50rpx;
  color: #a9a9a9;
  line-height: 50rpx;
  text-align: right;
  padding: 20rpx 0;
  font-size: 25rpx;
}

.postage>text {
  color: #999;
}

.postage>text text {
  font-size: 30rpx;
  color: #d81e06;
}

.shangp {
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0;
  border-top: 1px solid #f1f1f1;
}

.shangp-b {
  height: 60rpx;
  border: 1px solid #e1e1e1;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  margin: 0 10rpx;
  font-size: 25rpx;
  padding: 0 20rpx;
  border-radius: 6rpx;
  background: #ff6c00;
}

.shangp-bs {
  color: #fff;
  background: #ff6c00;
  border: 1px solid #f97704;
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  font-size: 11px;
  margin: 0 10rpx;
  padding: 0 20rpx;
  border-radius: 6rpx;
}

.orderList .text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

.tatolprice {
  font-size: 30rpx;
  color: #f97704;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .6);
}

.content .title {
  font-size: 18px;
  text-align: center;
  margin: 20rpx 0 40rpx 0;
}

.content {
  background-color: #fff;
  top: 50%;
  left: 8px;
  right: 8px;
 
  transform: translateY(-50%);
  position: fixed;
  width: 90%;
  margin: 0 auto;
  z-index: 99999;
  border-radius: 6rpx;
  padding: 20rpx;
}

.content label {
  width: 30%;
  font-size: 12px;
}

.content input,
.type {
  align-items: center;
  font-size: 12px;
  width: 70%;
  line-height: 60rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  padding: 2px 10px;
  box-sizing: border-box;
}

.content .options {
  margin-left: 30%;
  width: 70%;
  border: 1px solid #ccc;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 14px;
}

.content .options .select {
  line-height: 60rpx;
  height: 60rpx;
}

.content .options .selected {
  background-color: rgb(166, 210, 235);
  color: #fff;

}

.content .selectimg {
  margin-left: 30%;
  margin-top: 20rpx;
}

.content .selectimg .img {
  position: relative;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
}

.content .selectimg .img image {
  width: 100%;
  height: 100%;
}

.content .selectimg .img .delete {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: rgb(80, 78, 78);
  color: #FFF;
  right: -10rpx;
  top: -10rpx;
  text-align: center;
  border-radius: 50%;
font-size: 12px;
}

.content textarea {
  width: 70%;
  border: 1px solid #ccc;
  padding: 2px 10px;
  box-sizing: border-box;
}

.content .item {
  margin-bottom: 20rpx;
}

.content .choose {
  margin-top: 20rpx;
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  display: block;
  border-radius: 4rpx;
  background: #f97704;
  color: #fff;
}

.btnss {
  margin-left: 30%;
  display: flex;
  justify-content: space-between;
}

.btn1 {
  width: 49%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  display: block;
  border-radius: 2px;
  background: #f97704;
  margin: 0;
  color: #fff !important;
}

.btn2 {
  background: #ccc;
  width: 49%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  display: block;
  border-radius: 2px;
  color: #333 !important;
}

.tips {
  margin-left: 30%;
  font-size: 12px;
}

.toastimg{
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}



.weui-dialog__ft_son{
  width: 100%;
  height: 100%;
text-align:center;
font-size:28rpx
}

.ordertop image{
  border-radius: 16rpx;
}
