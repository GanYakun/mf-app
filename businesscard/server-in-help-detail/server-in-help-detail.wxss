.coup-box{
  margin: 0 auto;
  width: calc(100% - 60rpx);
  background-size: 100% 100%;
  display: flex;
  padding: 30rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.coup-box>view{
  width: calc(100% - 10rpx - 40%);
  
}
.coup-box>view:nth-child(2){
  padding-left: 30rpx;
  box-sizing: border-box;
}
.coup-box>view:first-child{
  width: 10rpx;
  background-color: #f08300;
  position: absolute;
  height: 100%;
  top: 0;
}
.coup-box>view:last-child{
  width: 40%;
  text-align: center;
  padding-left: 30rpx;
  box-sizing: border-box;
}


.coup-type{
  padding: 6rpx 10rpx;
  background-color: #f08300;
  font-size: 22rpx;
  border-radius: 6rpx;
  color: #ffffff;
}
.coup-title{
  color: #000000;
  font-size: 28rpx;
  margin-left: 15rpx;
}
.coup-type-box{
  vertical-align: middle;
}
.coup-troup{
  margin-top: 50rpx;

}
.coup-troup>view{
  display: flex;
  align-items: center;
  color: #7d7d7d;
  font-size: 28rpx;
  word-break: break-all;
}
.coup-troup>view>text{
  margin-right: 10rpx;
  display: block;
}
.three-box{
  position: relative;
}

.three-box>view:first-child{
  font-size: 46rpx;
	font-weight: bold;
  color: #f08300;
  text-align: center;
}
.three-box>view:first-child>text{
  font-size: 28rpx;
  color: #f08300;
  margin-left: 6rpx;
}
.three-box>view:nth-child(2){
  color: #7d7d7d;
  font-size: 24rpx;
}
.three-box>view:last-child{
  color: #333333;
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(calc(-50% + 15rpx), 0%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.three-box>view:last-child>image{
  width: 40rpx;
  height: 0;
}
.instructions-for-use{
  width: 100%;
  padding: 40rpx 50rpx;
  white-space: pre-wrap;
  font-size: 26rpx;
  color: #727171;
  box-sizing: border-box;
}
.coup-view{
  width: 100%;
  background-color: #efefef;
  padding: 30rpx 0;
}

.instructions-for-use>text{
  color:#727171 ;
  font-weight: bold;
  font-size: 34rpx;
}
.qr-code{
  width: calc(100% - 60rpx );
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  padding: 20rpx 0;
}
.qr-code image{
  width: 70%;
  height: 0;
}
.qr-code>view{
  margin-top: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color:#7d7d7d ;
}

.receive{
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f08300;
  padding: 0 16rpx;
  border-radius: 50rpx;
  color: #ffffff !important;
  font-size: 28rpx;
}

.be-overdue{
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 16rpx;
  border-radius: 50rpx;
  background-color: #ddddde;
  color: #ffffff !important;
  font-size: 28rpx;
}